{# Contacts page content #}
{% if page == 'contacts' %}
<section class="contacts">
  <div class="container">
    <div class="grid cols-2">
      <div>
        <iframe
          src="https://www.google.com/maps?q=Chem.+de+Beau-Rivage+3+1006+Lausanne&output=embed"
          width="100%"
          height="360"
          style="border:0;"
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          aria-label="Map"></iframe>
      </div>
      <div>
        <h2>{{ title }}</h2>
        <p>{{ address }}</p>
        {% if email %}<p>Email: <a href="mailto:{{ email }}">{{ email }}</a></p>{% endif %}
        {% if how_to_get %}<p>{{ how_to_get }}</p>{% endif %}
      </div>
    </div>
  </div>
{% endif %}

