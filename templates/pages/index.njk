{# Home page content #}
{% if page == 'index' %}
<section class="hero">
  <div class="slides">
    {% for s in hero %}
      <a class="slide" href="{{ s.url }}">
        <div class="cover" style="background-image:url('{{ s.image }}')"></div>
        <div class="overlay"></div>
        <div class="inner">
          <h2>{{ s.title }}</h2>
          <p>{{ s.subtitle }}</p>
        </div>
      </a>
    {% endfor %}
  </div>
  <div class="controls">
    <button class="prev" aria-label="Previous">‹</button>
    <button class="next" aria-label="Next">›</button>
  </div>
  <div class="dots">
    {% for s in hero %}
      <button aria-label="Go to slide {{ loop.index }}"></button>
    {% endfor %}
  </div>
</section>

<section class="home-section news">
  <div class="container">
    <h2>{{ sections.news.title }}</h2>
    <div class="carousel">
      <div class="carousel-track flex-row">
        {% for item in sections.news.items %}
          <article class="card">
            <time class="dim">{{ item.date }}</time>
            <h3><a href="{{ item.url }}">{{ item.title }}</a></h3>
          </article>
        {% endfor %}
      </div>
      <div class="nav">
        <button class="prev" aria-label="Previous">‹</button>
        <button class="next" aria-label="Next">›</button>
      </div>
    </div>
  </div>
</section>

<section class="home-section spiritual">
  <div class="container">
    <h2>{{ sections.spiritual.title }}</h2>
    <div class="carousel">
      <div class="carousel-track flex-row">
        {% for item in sections.spiritual.items %}
          <article class="card">
            <h3><a href="{{ item.url }}">{{ item.title }}</a></h3>
          </article>
        {% endfor %}
      </div>
      <div class="nav">
        <button class="prev" aria-label="Previous">‹</button>
        <button class="next" aria-label="Next">›</button>
      </div>
    </div>
  </div>
</section>

<section class="home-section community">
  <div class="container">
    <h2>{{ sections.community.title }}</h2>
    <div class="carousel">
      <div class="carousel-track flex-row">
        {% for item in sections.community.items %}
          <article class="card">
            {% if item.image %}<img src="{{ item.image }}" alt="" style="object-fit:cover;width:100%;height:160px;border-radius:8px;">{% endif %}
            <h3><a href="{{ item.url }}">{{ item.title }}</a></h3>
          </article>
        {% endfor %}
      </div>
      <div class="nav">
        <button class="prev" aria-label="Previous">‹</button>
        <button class="next" aria-label="Next">›</button>
      </div>
    </div>
  </div>
</section>
{% endif %}

