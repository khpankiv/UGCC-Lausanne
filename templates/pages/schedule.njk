{% if page == 'schedule' %}
<section class="schedule-page container">
  {% if sections.schedule and sections.schedule.length %}
    <div class="liturgy-grid">
      {% for item in sections.schedule | sort_by_time %}
        {% include "partials/card-liturgy.njk" %}
      {% endfor %}
    </div>
  {% else %}
    <p class="no-events">{{ no_events or 'No events at the moment.' }}</p>
  {% endif %}

</section>
{% endif %}
